@model List<EmployeeAdvanceResponseDto>

<div class="container-fluid">
    <div class="row">


        <div class="table-responsive">
            <table class="table table-striped table-bordered">
                <thead class="thead-dark">
                    <tr>
                        <th>Avans Açıklaması</th>
                        <th>Avans Miktarı</th>
                        <th>Avans Durumu</th>
                        <th>Avans Projesi</th>
                        <th>Çalışan Adı</th>
                        <th>Çalışan Soyadı</th>
                        <th>Avans Tarihi</th>
                        <th>Avans Ödeme Tarihi</th>

                        <th>Detay</th>
                        
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model)
                    {
                    <tr>
                        <td>@item.AdvanceDescription</td>
                        <td>@item.AdvanceAmount</td>
                        <td>@item.StatusName</td>
                        <td>@item.ProjectName</td>
                        <td>@item.EmployeeName</td>
                        <td>@item.Surname</td>
                        <td>@item.RequestDate</td>
                        <td>@item.DesiredDate</td>
                        <td>
                            <a class="btn btn-success btn-sm" asp-action="UpdateProduct" asp-route-id="@item.AdvanceID">
                                <i class="bi bi-pencil"></i> Detay Gör
                            </a>
                        </td>

                    </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>
