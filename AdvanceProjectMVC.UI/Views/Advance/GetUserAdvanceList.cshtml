@model List<UserAdvanceListDTO>



<div class="row">
    <div class="table-responsive">
        <table class="table table-striped table-bordered">
            <thead class="thead-dark">
                <tr>
                    <th>Çalışanın Adı Soyadı</th>
                    <th>Unvanı</th>
                    <th>Güncel Statü</th>
                    <th>Talep Oluşturma Tarihi</th>
                    <th>İstenilen Tarih</th>
                    <th>Avans Miktarı</th>
                    <th>Onay</th>
                    <th>Reddet</th>
                </tr>
            </thead>
            <tbody>


                @foreach (var item in Model)
                {
                <tr>
                    <td>@item.Name @item.Surname</td>
                    <td>@item.TitleName</td>
                    <td>@item.StatusName</td>
                    <td>@item.RequestDate</td>
                    <td>@item.DesiredDate</td>
                    <td>@item.AdvanceAmount</td>

                    <td>
                        <a class="btn btn-success btn-sm" asp-controller="Advance" asp-action="AddAdvanceHistoryApprove" asp-route-advanceAmount="@item.AdvanceAmount" asp-route-advanceId="@item.AdvanceID" asp-route-statusId="@item.AdvanceStatusID" type="submit"><i class="bi bi-pencil"></i> Onayla</a>

                    </td>
                    <td>
                        <a class="btn btn-danger btn-sm" asp-controller="Advance" asp-action="AdvanceReject"  asp-route-advanceId="@item.AdvanceID" type="submit"><i class="bi bi-pencil"></i> Reddet</a>

                    </td>
                </tr>
                }
            </tbody>
        </table>
    </div>
</div>


